{
    "name": "handmadeweb/buildamic",
    "license": "MIT",
    "description": "Buildamic is a Pagebuilder addon for Statamic 3",
    "keywords": [
        "statamic",
        "statamic-addon",
        "page-builder"
    ],
    "require": {
        "php": "^8.0",
        "laravel/framework": "^8.0 || ^9.0",
        "statamic/cms": "3.3.*",
        "handmadeweb/hookable-actions-filters": "^1.1"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0 || ^7.0",
        "phpunit/phpunit": ">=8.5.19 || ^9.5"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "HandmadeWeb\\Buildamic\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HandmadeWeb\\Buildamic\\Tests\\": "tests"
        }
    },
    "extra": {
        "statamic": {
            "name": "Buildamic",
            "description": "Buildamic is a Pagebuilder addon for Statamic 3"
        },
        "laravel": {
            "providers": [
                "HandmadeWeb\\Buildamic\\ServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    }
}
